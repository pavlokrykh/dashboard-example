{
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "semi": true,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": ["*.component.html", "*.html"],
      "options": {
        "printWidth": 120
      }
    },
    {
      "files": ["*.component.ts", "*.ts"],
      "options": {
        "printWidth": 120
      }
    },
    {
      "files": ["*.component.scss", "*.scss"],
      "options": {
        "printWidth": 120,
        "singleQuote": true,
        "tabWidth": 2
      }
    }
  ]
}
